        <style>
            *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.main{
    border: 1px solid gray;
    display: grid;
    grid-template-rows: 100px 620px;
    grid-template-columns: 20% 60% 20%;
}

.navbar{
    background: #F46036;
    grid-column: 1/-1;

}
.navbar img{
    position: relative;
    width: 10%;
    height: 90%;
    margin-top: 5px;
    margin-left: 30px;
    float:right;
}
.navbar a{
    position: relative;
    float:right;
    line-height: 100px;
    text-decoration: none;
    color: #FFFFFF;
    margin-left: 30px;

}
.eatFood{
    background-color: #cccccc;
    background-position-y: bottom;
    background-position-x: center;
    background-repeat: no-repeat;
    background-color: #FFFFFF;
    background-size: 65%;
}

.eatLeft{
    background-color: #FFFFFF;;
}
.eatRight{
    background-color: #FFFFFF;
}
.eat-title {
    display: flex;
    justify-content: center;
    margin-top: 5%;
}
.box{

    padding: 2% 3%;
    width: 80%;
    border: 3px solid green;
    margin: 30px auto 30px auto;
    font-size: 20px;
    background: rgba(255, 255, 255, 0.5);
    border: 3px solid #F46036;
    border-radius: 10px;
}



.eat-title button{
    background-color: Transparent;
    border: none;
}

.eatRight div{
    width: auto;
    height: 20%;
    margin: 20px 60px 0 0;
    display: grid;
    place-content: center;
    background-color: #FDB797;
    border: 3px solid #F46036;
    border-radius: 10px;
    justify-content: center;
    text-align: center;

}
 
.eatFood{
    background-image: url("../images/Group 3.svg");
}

.food{
    width: 80%;
    max-height: 55%;
    align-items: center;
    border: 3px solid green;
    margin: auto;
    font-size: 18px;
    overflow: scroll;
    background: rgba(255, 255, 255, 0.5);
    border: 3px solid #F46036;
    border-radius: 10px;
}

#breakfast-food{
    display:none;
}

#lunch-food{
    display:none;
}

#snacks-food{
    display:none;
}

.dinner-food{
    display:none;
}
.selectFood{
    display: none;
    width: 80%;
    max-height: 55%;
    align-items: center;
    border: 3px solid green;
    margin: auto;
    font-size: 18px;
    overflow: scroll;
    background: rgba(255, 255, 255, 0.5);
    border: 3px solid #F46036;
    border-radius: 10px;
}

#breakfast-item {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }

#selected {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }

#breakfast-item td, #breakfast-item th {
padding: 15px;
}

#selected td, #breakfast-item th {
    padding: 7px;
    }
    

#breakfast-item th {
padding-top: 12px;
padding-bottom: 12px;
text-align: left;
background-color: #04AA6D;
color: white;
}
#selected th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #04AA6D;
    color: white;
    }

/*display lunch items*/

#lunch-item {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }

#lunch-item th {
    padding: 7px;
    }
#lunch-item td, #lunch-item th {
    padding: 15px;
    }

#lunch-item th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #04AA6D;
    color: white;
    }
/*display snacks items*/
#snacks-item {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }

#snacks-item th {
    padding: 7px;
    }

#snacks-item td, #Snacks th {
    padding: 15px;
    }

#snacks-item th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #04AA6D;
    color: white;
    }
/*display dinner items*/
#dinner-item {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }
#dinner-item th {
    padding: 7px;
    }

#dinner-item td, #bDinner-item th {
    padding: 15px;
    }

#dinner-item th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #04AA6D;
    color: white;
    }


    .counter{
        display: flex; 
        float: right; 
        width: 70%; 
        justify-content: space-between;
    }
    .qty-input{
        color:#F46036;
        border-color: #F46036;
        width: 30px;
    }

    #btn-submit-breakfast{
        float: right;
        margin: 10px 20px;
        Width :35px;
        Height:35px;
        Top:7.5px;
        Left:7.5px;
        background-color: #FDB797;
        border-radius: 50%;
        border-color: #F46036;
    }
        </style>
    </head>
    <body>
        <div class="main">
            <div class="navbar">
                <img src="/Images/profile_pic.svg" alt="Profile pic">
                
                <a href=""><p style="font-family:'Roboto';font-style: normal;font-size: 20px;">My Account</p></a>
                <a href=""><p style="font-family:'Roboto';font-style: normal;font-size: 20px;">Goals</p></a>
            </div>
            
            <div class="eatLeft"></div>
            <div class="eatFood">
                    <div class="eat-title">
                        <button style="content: \00AB; font-size: 70px; color:#F46036;">&#171;</button>
                        <div style="text-align: center; margin: auto 10px auto 10px;">
                            <h3 style="font-family: 'Roboto';font-size: 24px;color: #F46036;"><%=date%> [ Day <%=day%> ]</h3>
                            <h1>What did you eat today?</h1>
                        </div>
                        
                        <button style="content: \00BB; font-size: 70px; color:#F46036;"><span>&#187;</span></button>
                    </div>

                    <div class="box">
                        <span>Breakfast</span>  
                        <button class="btn" id="bk"onclick="disData(this.id);"style="content: \002B; font-size: 20px; color:#F46036; float: right; width:25px; border-radius: 5px; background-color: transparent; border-color:#F46036 ;">&#43;</button>
                    </div>
                    <div id="breakfast-food" class="food breakfast-food">
                        <table id="breakfast-item">
                            <% meal.forEach(e=>{%>
                                <% if(e.dataValues.consumption_time==1){ %>
                                    <tr>
                                        <td><%=e.dataValues.food.food_name%></td>
                                        <% if(e.dataValues.food.food_type==1){%>
                                            <td><img src="/Images/veg.png" style="height: 20px;"/></td>
                                        <% }else{%>
                                            <td><img src="/Images/nonveg.jpg" style="height: 20px;"/></td>
                                        <% }%>
                                        <td><%=e.dataValues.food.quantity%></td>
                                        <td><%=e.dataValues.food.calories%> KCals</td>
                                        <td><%=e.dataValues.Quantity%></td>
                                    </tr>    
                                <%}%>
                            <%})%>
        
                        </table>
                        
                    </div>
                    <!-- <div id="selectFood" class="selectFood">
                        <table id="selected">
                            
                        </table>
                    </div> -->
                    

                    <div class="box">
                        <span>Lunch</span>
                        <button id="ln"onclick="disData(this.id);" style="content: \002B; font-size: 20px; color:#F46036; float: right; width:25px; border-radius: 5px; background-color: transparent; border-color:#F46036 ;">&#43;</button>
                    </div>
                    <div id="lunch-food" class="food lunch-food">
                        <table id="lunch-item">
                            <% meal.forEach(e=>{%>
                                <% if(e.dataValues.consumption_time==2){ %>
                                    <tr>
                                        <td><%=e.dataValues.food.food_name%></td>
                                        <% if(e.dataValues.food.food_type==1){%>
                                            <td><img src="/Images/veg2.JPG" style="height: 20px;"/></td>
                                        <% }else{%>
                                            <td><img src="/Images/nonveg.jpg" style="height: 20px;"/></td>
                                        <% }%>
                                        <td><%=e.dataValues.food.quantity%></td>
                                        <td><%=e.dataValues.food.calories%> KCals</td>
                                        <td><%=e.dataValues.Quantity%></td>
                                    </tr>    
                                <%}%>
                            <%})%>                            
                        </table>
                        
                        <button id="btn-submit-breakfast" onclick="viewSelectedLunchItems()"> &#10003;</button>
                    </div>


                    <div class="box">
                        <span>Dinner</span>
                        <button id="dnr"onclick="disData(this.id);" style="content: \002B; font-size: 20px; color:#F46036; float: right; width:25px; border-radius: 5px; background-color: transparent; border-color:#F46036 ;">&#43;</button>
                    </div>
                    <div id="dinner-food" class="food dinner-food">
                        <table id="dinner-item">                            <% meal.forEach(e=>{%>
                            <% if(e.dataValues.consumption_time==3){ %>
                                <tr>
                                    <td><%=e.dataValues.food.food_name%></td>
                                    <% if(e.dataValues.food.food_type==1){%>
                                        <td><img src="/Images/veg.png" style="height: 20px;"/></td>
                                    <% }else{%>
                                        <td><img src="/Images/nonveg.jpg" style="height: 20px;"/></td>
                                    <% }%>
                                    <td><%=e.dataValues.food.quantity%></td>
                                    <td><%=e.dataValues.food.calories%> KCals</td>
                                    <td><%=e.dataValues.Quantity%></td>
                                </tr>    
                            <%}%>
                        <%})%>                          
                        </table>
                        
                        <button id="btn-submit-breakfast" onclick="viewSelectedDinnerItems()"> &#10003;</button>
                    </div>
                    

            </div>
            <div class="eatRight">
                <div>
                    <p style="font-size: 25px;">Total Calories</p>
                    <h1><%=goal_cal%></h1>
                </div>
				<div>
                    <p style="font-size: 25px;">Your Calories</p>
                    <h1><%=user_cal%></h1>
                </div>
            </div>
        </div>
        <!-- <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script> -->
        <script type="text/javascript">

        
function disData(element){
    // var x = document.querySelector("#food");
    var temp = document.getElementById(element).parentElement.nextElementSibling.id;
    var x = document.getElementById(temp);
    if(temp == "breakfast-food")
    {
        document.getElementById("lunch-food").style.display = "none";
        //document.getElementById("snacks-food").style.display = "none";
        document.getElementById("dinner-food").style.display = "none";
        if(x.style.display == "none")
        {
            x.style.display="block";
        }else{
            x.style.display="none";
        }
        
    }else if(temp == "lunch-food")
    {
        document.getElementById("breakfast-food").style.display = "none";
        //document.getElementById("snacks-food").style.display = "none";
        document.getElementById("dinner-food").style.display = "none";
        if(x.style.display == "none")
        {
            x.style.display="block";
        }else{
            x.style.display="none";
        }
        
    }else {
        document.getElementById("lunch-food").style.display = "none";
        //document.getElementById("snacks-food").style.display = "none";
        document.getElementById("breakfast-food").style.display = "none";
        if(x.style.display == "none")
        {
            x.style.display="block";
        }else{
            x.style.display="none";
        }
        
    }

    
    
}



           
        </script>
        
    </body>
</html>
